{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "*" : ["./node_modules/@types/*", "*"],
      "@/src/*": [ "src/*" ],
      "@/common/*": [ "src/common/*" ],
      "@/weather/*": [ "src/weather/*" ],
      "@/forecast/*": [ "src/forecast/*" ]
    },
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules"
  ]
}